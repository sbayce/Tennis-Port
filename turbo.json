{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "lint": {}
  },
  "globalEnv": [
    "STRIPE_SECRET_KEY",
    "ACCESS_SECRET",
    "ACCESS_EXPIRATION",
    "REFRESH_SECRET",
    "REFRESH_EXPIRATION"
  ]
}
