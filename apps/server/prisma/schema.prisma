generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["relationJoins"]
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid()) @map("_id")
  email     String   @unique
  password  String
  name      String
  role UserRole
  createdAt DateTime @default(now())
  orders    Order[]
  addresses Adress[]
}

model Product {
  id        String          @id @default(cuid()) @map("_id")
  name      String
  image     String
  image2    String
  images    String[]
  brand     String
  price     Float
  stock     Int
  category  ProductCategory
  createdAt DateTime        @default(now())
  updatedAt DateTime        @updatedAt
  racket    Racket?
  shoe      Shoe?
  OrderItem OrderItem[]
}

enum ProductCategory {
  RACKET
  SHOE
}

model Racket {
  id        String  @id @default(cuid()) @map("_id")
  product   Product @relation(fields: [productId], references: [id], onDelete: Cascade)
  productId String  @unique
  headSize  String
  pattern   String
  weight    String
  type      String
}

model Shoe {
  id        String     @id @default(cuid()) @map("_id")
  product   Product    @relation(fields: [productId], references: [id], onDelete: Cascade)
  productId String     @unique
  size      String[]
  type      ShoeGender
}

enum ShoeGender {
  MALE
  FEMALE
  UNISEX
}

model Order {
  id          String      @id @default(cuid()) @map("_id")
  user        User?        @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId      String?
  createdAt   DateTime    @default(now())
  items       OrderItem[]
  totalAmount Float
  customerEmail String?
  adress Adress @relation(fields: [adressId], references: [id])
  adressId String
  status OrderStatus
}

model OrderItem {
  id        String  @id @default(cuid()) @map("_id")
  order     Order   @relation(fields: [orderId], references: [id], onDelete: Cascade)
  orderId   String
  product   Product @relation(fields: [productId], references: [id])
  productId String
  quantity  Int
  price     Float
  gripOption GripOption?
  stringOption StringOption?
  shoeSize String?
}

model Adress {
  id String  @id @default(cuid()) @map("_id")
  user User? @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId String?
  orders Order[]
  adress1 String
  adress2 String?
  country String
  city String
  postalCode String
}

enum GripOption {
  ONE
  TWO
  THREE
  FOUR
}
enum StringOption {
  STRUNG
  UNSTRUNG
}
enum OrderStatus {
  PENDING
  SHIPPED
  DELIVERED
  CANCELLED
  RETURNED
}
enum UserRole {
  ADMIN
  MEMBER
}